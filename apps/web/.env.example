# Example environment configuration for Next.js frontend
# Copy this to .env.local and update values as needed

# Django API URL - Secure production backend
NEXT_PUBLIC_API_URL=http://cgstewart-portfolio-production-1196410477.us-east-1.elb.amazonaws.com/api/v1

# For local development with local Django server, use:
# NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# API Configuration
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=10000

# Security Settings
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENVIRONMENT=production

